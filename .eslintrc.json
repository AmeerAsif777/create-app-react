{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parser": "@babel/eslint-parser", // babel-eslint is now @babel/eslint-parser.
  "extends": [
    "eslint:recommended",
    "prettier",
    "airbnb",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "react/jsx-filename-extension": 0,
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": true }
    ]
  }
}
